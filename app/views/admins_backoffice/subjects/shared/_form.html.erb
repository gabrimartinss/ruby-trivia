<h1><%=action_message%></h1>
  <% if @subject.errors.any? %>
    <div class="alert alert-danger" role="alert">
      <ul>
        <% @subject.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form_with(model: [ :admins_backoffice, @subject ]) do |form| %>
    <div class="form-group">
      <span class="text-white"><%= form.label :description, style: "display: block" %>
      <%= form.text_field :description, class:"form-control", placeholder:"Subject Description" %>
    </div><br>
    <button type="submit" class="btn btn-primary">Save</button>
  <% end %>
