<h1><%=action_message%></h1>
  <% if @admin.errors.any? %>
    <div class="alert alert-danger" role="alert">
      <ul>
        <% @admin.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form_with(model: [ :admins_backoffice, @admin ]) do |form| %>
    <div class="form-group">
      <span class="text-white"><%= form.label :email, style: "display: block" %>
      <%= form.text_field :email, class:"form-control", placeholder:"Admin email" %>
    </div><br>
    <div class="form-group">
      <span class="text-white"><%= form.label :password, style: "display: block" %>
      <%= form.password_field :password, class:"form-control", placeholder:"Password" %>
    </div><br>
    <div class="form-group">
      <span class="text-white"><%= form.label :password_confirmation, style: "display: block" %>
      <%= form.password_field :password_confirmation, class:"form-control", placeholder:"Password Confirmation" %>
    </div><br>
    <button type="submit" class="btn btn-primary">Save</button>
  <% end %>
