<div class="bd-example">
  <table class="table">
    <thead class="thead-dark">
      <tr>
        <th scope="col">#</th>
        <th scope="col">Question Name</th>
        <th scope="col">Subject</th>
        <th scope="col">Updated At</th>
        <th>
          <%= link_to new_admins_backoffice_question_path, class: "btn btn-success" do %>
            <i class="bi bi-plus-circle"></i>
          <% end %> 
        </th>
      </tr>
    </thead>
    <tbody>
      <% @questions.each do |question| %>
      <tr>
        <td><%= question.id %></td>
        <td><%= question.description.truncate(50) %></td>
        <td><%= question.subject.description %></td>
        <td><%= question.updated_at %></td>
        <td style="width: 100px">
          <%= link_to edit_admins_backoffice_question_path(question.id), class: "btn btn-primary btn-circle me-2" do %>
            <i class="bi bi-pencil fs-6"></i>
          <% end %>
          <%= button_to admins_backoffice_question_path(question.id), method: :delete, class: "btn btn-danger btn-circle", data: { confirm: "Are you sure you want to delete this questionistrator?" } do %>
            <i class="bi bi-trash-fill fs-6"></i>
          <% end %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <div class="d-flex justify-content-center">
    <%= paginate @questions %>
  </div>
</div>