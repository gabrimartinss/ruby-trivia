<div class="answer-container text-center">
  <% if @answer.correct %>
    <h1 class="display-3 text-success mb-4">Correct Answer!</h1>
    <p class="lead explanation-text text-white"><%= @answer.explanation %></p>
  <% else %>
    <h1 class="display-3 text-danger mb-4">Incorrect Answer</h1>
    <p class="lead explanation-text text-white"><%= @answer.explanation %></p>
  <% end %>

<div class="btn-group mt-4" role="group">
  <a href="<%= request.referer %>" class="btn btn-primary">Back</a>
  <a href="<%= users_backoffice_statistic_path %>" class="btn btn-secondary">See my Statistics</a>

  <% if session[:next_question_id] %>
    <%= link_to "Next Question", users_backoffice_question_path(session[:next_question_id], page: session[:current_page]), class: "btn btn-success" %>
  <% end %>
</div>