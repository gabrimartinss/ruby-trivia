<!DOCTYPE html>
<html>
<head>
  <%= favicon_link_tag 'favicon.ico' %>
  <title>Ruby Trivia</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
  <%= javascript_importmap_tags %>

  <style>
    /* Custom CSS to adjust sidebar width on smaller screens */
    @media (max-width: 768px) {
      .custom-sidebar {
        width: 15%;
        max-width: 200px;
      }
    }
  </style>
</head>

<body>
<div class="container-fluid">
  <div class="row">
    <!-- Sidebar -->
    <div class="col-auto col-md-3 col-xl-2 px-sm-2 px-0 bg-dark custom-sidebar">
      <div class="d-flex flex-column align-items-center align-items-sm-start px-3 pt-2 text-white min-vh-100">
        <!-- Profile Section -->
        <div class="d-flex align-items-center pb-3 mb-md-0 me-md-auto text-white text-decoration-none">
          <%= image_tag 'logo.webp', alt: 'Profile Picture', class: 'rounded-circle', width: '100', height: '80' %>
        </div>
        
        <!-- Navigation -->
        <ul class="nav nav-pills flex-column mb-sm-auto mb-0 align-items-center align-items-sm-start" id="menu">
          <li class="nav-item">
            <a href="<%= users_backoffice_home_index_path %>" class="nav-link align-middle px-0">
              <i class="fs-4 bi-house"></i> <span class="ms-1 d-none d-sm-inline">Home</span>
            </a>
          </li>
          <li>
            <a href="<%= users_backoffice_profile_path %>" class="nav-link px-0 align-middle">
              <i class="fs-4 bi bi-person-lines-fill"></i> <span class="ms-1 d-none d-sm-inline">Profile</span>
            </a>
          </li>
          <li>
            <a href="<%= users_backoffice_statistic_path %>" class="nav-link px-0 align-middle">
              <i class="fs-4 bi bi-activity"></i> <span class="ms-1 d-none d-sm-inline">Statistic</span>
            </a>
          </li>
          <li>
            <%= button_to destroy_user_session_path, method: :delete, class: "nav-link px-0 align-middle" do %>
              <i class="fs-4 bi bi-box-arrow-right"></i> <span class="ms-1 d-none d-sm-inline"><%= t('Exit') %></span>
            <% end %>
          </li>
        </ul>
      </div>
    </div>

    <!-- Main Content -->
    <div class="col py-3">
      <div class="container mt-4">
        <%= yield %>
      </div>
    </div>
  </div>
</div>

</body>
</html>
